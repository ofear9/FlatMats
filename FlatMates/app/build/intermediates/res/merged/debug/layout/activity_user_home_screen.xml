<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ranendelman.flatmates.Activities.UserHomeScreenActivity">

    <Button
        android:text="Receipts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/receiptsButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Faults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faultsButton"
        android:layout_below="@+id/receiptsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactsButton"
        android:layout_below="@+id/faultsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventsButton"
        android:layout_above="@+id/receiptsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Supermarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/supermarketButton"
        android:layout_above="@+id/eventsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Create new HOME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createNewHOMEButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Add mates to your flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_mates"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/homeName" />


</RelativeLayout>
